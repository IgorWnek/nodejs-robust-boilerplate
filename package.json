{
  "name": "nodejs-robust-boilerplate",
  "version": "1.0.0",
  "description": "Robust Node.js Boilerplate with TypeScript and ESM",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "dev:debug": "tsx debug src/index.ts",
    "test": "tsx --test test/**/*.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "keywords": [
    "nodejs",
    "typescript",
    "esm",
    "boilerplate"
  ],
  "author": "Igor Wnek",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  }
}
